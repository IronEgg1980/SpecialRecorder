<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="16dp"
    android:elevation="16dp">

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:padding="6dp"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_date_range_cyan_600_24dp"/>
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="2019年7月23日" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:text="记录时间：12:35" />
            <TextView
                android:id="@+id/recordCountTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:textSize="12sp"
                android:paddingRight="12dp"
                android:textColor="@android:color/darker_gray"
                android:text="10条记录" />
            <ImageView
                android:id="@+id/expandImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_expand_more_cyan_600_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/details_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                android:layout_marginRight="24dp"
                android:src="@drawable/zhengsanjiao" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/details_shape"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>