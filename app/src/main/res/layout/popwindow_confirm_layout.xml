<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popwindow_bg">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_warning_black_36dp" />

        <TextView
            android:id="@+id/messageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingTop="12dp"
            android:paddingEnd="8dp"
            android:paddingBottom="12dp"
            android:text="请确认信息！是否继续？"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/thirdTV"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentStart="true"
        android:text="其他按钮"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        style="@style/TextViewBT"/>

    <TextView
        android:id="@+id/cancelTV"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/confirmTV"
        style="@style/CancelTextViewBT"/>

    <TextView
        android:id="@+id/confirmTV"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        style="@style/ConfirmTextViewBT"/>
</RelativeLayout>
